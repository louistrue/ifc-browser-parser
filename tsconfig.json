{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*", "*.ts"],
  "exclude": ["node_modules"]
}
